<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="711.5" Width="1143.3">
    <Grid>
        <ItemsControl Margin="22,19,727,28" BorderThickness="0,0,1,0" BorderBrush="Black">
            <TextBlock x:Name="StageListTitleText" TextWrapping="Wrap" Margin="20,20,20,5" FontSize="13" FontFamily="Georgia"/>
            <ListBox x:Name="StageListBox" HorizontalAlignment="Left" Height="569" Margin="20,0,0,0" VerticalAlignment="Top" Width="342" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="13" BorderThickness="0,1,0,0" BorderBrush="Black" SelectionChanged="StageListBox_SelectionChanged" FontFamily="Georgia"/>
        </ItemsControl>

        <ItemsControl x:Name="StoryArea" Margin="413,43,301,28" FontFamily="Georgia" FontSize="13">
        </ItemsControl>
        
        <ListBox x:Name="ReactionListBox" HorizontalAlignment="Left" Height="610" Margin="839,43,0,0" VerticalAlignment="Top" Width="286" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  SelectionChanged="ReactionListBox_SelectionChanged" BorderBrush="Black" BorderThickness="1,0,0,0" FontFamily="Segoe UI" FontSize="13"/>

    </Grid>
</Window>
