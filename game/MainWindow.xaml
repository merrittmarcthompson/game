<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="726.5" Width="1108.8">
    <Grid Background="White">
        <Border Background="White" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="634" Margin="28,23,0,0" VerticalAlignment="Top" Width="360">
            <ItemsControl Margin="10,15,10,0">
                <TextBlock x:Name="StageListTitleText" TextWrapping="Wrap" Margin="20,20,20,0" FontSize="13" FontFamily="Georgia"/>
                <Separator Margin="20, 12, 20, 10"/>
                <ListBox x:Name="StageListBox" HorizontalAlignment="Left" Height="562" Margin="10,0,10,10" BorderBrush="White" VerticalAlignment="Top" Width="312" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="13" SelectionChanged="StageListBox_SelectionChanged" FontFamily="Georgia"/>
            </ItemsControl>
        </Border>

        <Border Background="White" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="634" Margin="405,23,0,0" VerticalAlignment="Top" Width="360">
            <ItemsControl x:Name="StoryArea" Margin="30,30,30,30" FontFamily="Georgia" FontSize="13">
            </ItemsControl>
        </Border>

        <Border Background="White" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="634" Margin="784,23,0,0" VerticalAlignment="Top" Width="282">
            <ListBox x:Name="ReactionListBox" HorizontalAlignment="Left" Height="587" Margin="10,15,0,0" VerticalAlignment="Top" Width="261" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  BorderBrush="White" SelectionChanged="ReactionListBox_SelectionChanged" BorderThickness="1,1,1,1" FontFamily="Segoe UI" FontSize="13"/>
        </Border>
    </Grid>
</Window>
