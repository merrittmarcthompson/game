<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="704.5" Width="1036.8">
    <Grid Background="#FFE5E5E5">
        <TabControl HorizontalAlignment="Left" Height="621" Margin="22,23,0,0" VerticalAlignment="Top" Width="324">
            <TabItem x:Name="LocationTab" Header="Location">
                <ItemsControl Margin="10,10,10,0">
                    <TextBlock x:Name="StageListTitleText" TextWrapping="Wrap" Margin="20,20,20,0" FontSize="13" FontFamily="Georgia"/>
                    <Separator Margin="20, 12, 20, 10"/>
                    <ListBox x:Name="StageListBox" HorizontalAlignment="Left" Height="510" Margin="10,0,0,0" BorderBrush="White" VerticalAlignment="Top" Width="278" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="13" SelectionChanged="StageListBox_SelectionChanged" FontFamily="Georgia"/>
                </ItemsControl>
            </TabItem>
            <TabItem x:Name="HeroTab" Header="Hero">
                <ItemsControl Margin="10,10,10,0">
                    <Label Content="Quests:" Margin="10,10,10,0" HorizontalAlignment="Left" FontFamily="Georgia" FontSize="13" FontWeight="Bold"/>
                    <ItemsControl x:Name="QuestListArea" Margin="20,0,0,0" FontFamily="Georgia" FontSize="13"></ItemsControl>
                </ItemsControl>
            </TabItem>
            <TabItem x:Name="StorageTab" Header="Storage">
                <ItemsControl Margin="10,10,10,0">
                    <TextBlock x:Name="StorageListTitleText" TextWrapping="Wrap" Margin="20,20,20,0" FontSize="13" FontFamily="Georgia"/>
                    <Separator Margin="20, 12, 20, 10"/>
                    <ListBox x:Name="StorageListBox" HorizontalAlignment="Left" Height="510" Margin="10,0,0,0" BorderBrush="White" VerticalAlignment="Top" Width="278" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="13" SelectionChanged="StorageListBox_SelectionChanged" FontFamily="Georgia"/>
                </ItemsControl>
            </TabItem>
        </TabControl>

        <Border Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" HorizontalAlignment="Left" Height="599" Margin="348,45,0,0" VerticalAlignment="Top" Width="410">
            <ItemsControl x:Name="StoryArea" Margin="30,30,30,30" FontFamily="Georgia" FontSize="13">
            </ItemsControl>
        </Border>

        <Border Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" HorizontalAlignment="Left" Height="599" Margin="760,45,0,0" VerticalAlignment="Top" Width="238">
            <ListBox x:Name="ReactionListBox" HorizontalAlignment="Left" Height="573" Margin="10,15,0,0" VerticalAlignment="Top" Width="217" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  BorderBrush="White" SelectionChanged="ReactionListBox_SelectionChanged" BorderThickness="1,1,1,1" FontSize="12.5"/>
        </Border>

    </Grid>
</Window>
