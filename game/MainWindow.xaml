<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        Title="Gamebook - Mobile Phone Game" Height="545" Width="305"
        ResizeMode="NoResize">
    <Grid Background="Beige" Margin="0,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <ItemsControl x:Name="StoryArea" Margin="8,10,0,0" FontFamily="Segoe UI" FontSize="12" Height="auto" VerticalAlignment="Top" HorizontalAlignment="Left" Width="270">
            </ItemsControl>
        </ScrollViewer>
        <Button x:Name="UndoButton" Opacity="0.50" HorizontalAlignment="Left" VerticalAlignment="Top" Width="26" Height="26" Margin="260,476,0,0" Click="UndoClicked" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Image Source="images\undo-button.png"></Image>
        </Button>
    </Grid>
</Window>
